{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/shell/Songhay.Publications.Tests/Songhay.Publications.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "${workspaceFolder}/shell/Songhay.Publications.Tests/Songhay.Publications.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/shell/Songhay.Publications.Tests/Songhay.Publications.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet: build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/shell/Songhay.Publications.Tests/Songhay.Publications.Tests.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "dotnet: test [Songhay.Publications.Tests, filtered by selected text]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "${workspaceFolder}/shell/Songhay.Publications.Tests/Songhay.Publications.Tests.csproj",
                "--filter:${selectedText}",
                "--logger:trx",
                "--results-directory:${workspaceFolder}/shell/TestResults",
                "--verbosity:normal"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Pandoc: convert to HTML",
            "command": "pandoc",
            "args": [
                "${fileBasename}",
                "--from",
                "markdown+backtick_code_blocks",
                "--to",
                "html",
                "-o",
                "${fileBasenameNoExtension}.html"
            ],
            "isBackground": false,
            "options": {
                "cwd": "${fileDirname}"
            },
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "presentation: blog: markdownlint",
            "type": "npm",
            "script": "markdownlint",
            "path": "presentation/",
            "problemMatcher": []
        },
        {
            "label": "presentation: blog: npm build",
            "type": "npm",
            "script": "build",
            "path": "presentation/",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "test [clean test output folder]",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/shell/TestResults"
            },
            "linux": {
                "command": "rm",
                "args": [
                    "--verbose",
                    "*.trx"
                ]
            },
            "windows": {
                "command": "Remove-Item",
                "args": [
                    "-Path",
                    "*.trx",
                    "-Verbose"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "Songhay Publications Shell [SearchIndexActivity, with current opened settings file]",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/shell"
            },
            "linux": {
                "command": "dotnet",
                "args": [
                    "~/appRoot/songhay/publications/Songhay.Publications.Shell.dll",
                    "SearchIndexActivity",
                    "--base-path",
                    "${workspaceFolder}/shell",
                    "--settings-file",
                    "${fileBasename}"
                ]
            },
            "windows": {
                "command": "Songhay.Publications.Shell",
                "args": [
                    "SearchIndexActivity",
                    "--base-path",
                    "${workspaceFolder}\\shell",
                    "--settings-file",
                    "${fileBasename}"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "Songhay Publications Shell [MarkdownEntryActivity, with current opened settings file]",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/shell"
            },
            "linux": {
                "command": "dotnet",
                "args": [
                    "~/appRoot/songhay/publications/Songhay.Publications.Shell.dll",
                    "MarkdownEntryActivity",
                    "--base-path",
                    "${workspaceFolder}/shell",
                    "--settings-file",
                    "${fileBasename}"
                ]
            },
            "windows": {
                "command": "Songhay.Publications.Shell",
                "args": [
                    "MarkdownEntryActivity",
                    "--base-path",
                    "${workspaceFolder}\\shell",
                    "--settings-file",
                    "${fileBasename}"
                ]
            },
            "problemMatcher": []
        }
    ]
}