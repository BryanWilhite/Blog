{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pandoc: convert to HTML",
            "command": "pandoc",
            "args": [
                "${fileBasename}",
                "-f",
                "markdown",
                "-t",
                "html",
                "-o",
                "${fileBasenameNoExtension}.html"
            ],
            "isBackground": false,
            "options": {
                "cwd": "${fileDirname}"
            },
            "type": "shell",
            "problemMatcher": []
        }
    ]
}
